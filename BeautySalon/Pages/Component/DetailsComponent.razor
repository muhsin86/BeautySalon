@using BeautySalon.Data


<div class="p-4 border rounded row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                Name
            </div>
            <div class="col-8">
                <input value="@bookning.Product.Name" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                Price
            </div>
            <div class="col-8">
                <input value="@bookning.Product.Name" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                Category Name
            </div>
            <div class="col-8">
                <input value="@bookning.Product.Category.Name" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
            </div>
            <div class="col-4">
                <a href="/" class="btn btn-success form-control">Back to List</a>
            </div>
            <div class="col-4">
                <button @onclick="OnClickShowBookning" class="btn btn-primary form-control">
                    Make Bookning 
                </button>
            </div>
        </div>
    </div>
    <div class="offset-1 col-3 ">
        <h2>@bookning.Product.Category.Name</h2><hr />
        <img src="@convertImageToDisplay(bookning.Product.Image)"
             width="100%" style="border-radius:5px; border: 1px solid #bbb9b9" />
    </div>
    <br />
</div>

@code {
    [Parameter]
    public Bookning bookning { get; set; }

    [Parameter]
    public EventCallback OnClickShowBookning { get; set; }

    string convertImageToDisplay(byte[] image)
    {
        if (image != null)
        {
            var base64 = Convert.ToBase64String(image);
            var finalStr = string.Format("data:image/jpg;base64,{0}", base64);
            return finalStr;
        }
        return "";
    }
}

